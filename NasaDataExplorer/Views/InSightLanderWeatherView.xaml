<Page
    x:Class="NasaDataExplorer.Views.InSightLanderWeatherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NasaDataExplorer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Windows.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="12,0,0,12"
            Orientation="Vertical">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="InSight Mars Lander, Weather Service" />
            <TextBlock Text="Weather measurements (temperature, wind, pressure) on the surface of Mars at Elysium Plantia, a flat, smooth plain near Mars' equator." />
        </StackPanel>
        <Grid Grid.Row="1">
            <TextBlock
                x:Name="txtBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="TEST" />
            <!--<muxc:WebView Source="https://solarsystem.nasa.gov/gltf_embed/2380" />-->
        </Grid>
    </Grid>
</Page>
